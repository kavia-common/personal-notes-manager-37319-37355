---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <section class="card" style="padding: 20px;">
    <h1 style="margin:0 0 8px;">Welcome to Personal Notes</h1>
    <p class="text-muted" style="margin:0 0 16px;">Use the navigation to view all notes, favorites, or tags.</p>
    <div style="display:flex;gap:12px;flex-wrap:wrap;">
      <a class="btn btn-primary" href="/notes">Open Notes</a>
      <a class="btn btn-secondary" href="/notes/new">Create Note</a>
    </div>
  </section>
</Layout>
